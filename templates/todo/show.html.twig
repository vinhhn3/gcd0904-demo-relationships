{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ todo.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ todo.name }}</td>
        </tr>
        <tr>
            <th>Tag</th>
            <td>{{ todo.tag }}</td>
        </tr>
        <tr>
            <th>Category</th>
            {% for category in todo.getCategories() %}
                <td>{{ category.getName() }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('todo_index') }}">back to list</a>

    <a href="{{ path('todo_edit', {'id': todo.id}) }}">edit</a>

    {{ include('todo/_delete_form.html.twig') }}
{% endblock %}
